{
  "name": "@director.run/registry",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rm -rf .turbo .next node_modules",
    "dev": "dotenv -e .env.development next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check ./src",
    "lint:fix": "biome check ./src --write",
    "format": "bun run format:fix-classnames && bun run format:fix-all",
    "format:fix-all": "biome format --write ./src",
    "format:fix-classnames": "biome lint --fix --unsafe --only=lint/nursery/useSortedClasses ./src",
    "test": "dotenv -e .env.test playwright test",
    "typecheck": "tsc --noEmit",
    "db:push": "drizzle-kit push"
  },
  "exports": {
    "./*": {
      "types": "./src/*.ts",
      "default": "./src/*.ts"
    }
  },
  "dependencies": {
    "@director.run/design": "workspace:*",
    "@director.run/mcp": "workspace:*",
    "@director.run/utilities": "workspace:*",
    "@hookform/resolvers": "^5.1.1",
    "@tanstack/react-query": "^5.81.5",
    "@trpc/client": "^11.4.3",
    "@trpc/react-query": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "deepmerge": "^4.3.1",
    "drizzle-orm": "^0.44.3",
    "git-url-parse": "^16.1.0",
    "lucide-react": "^0.517.0",
    "next": "^15.2.3",
    "next-intl": "^4.3.1",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "radix-ui": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.58.1",
    "react-markdown": "^10.1.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "resend": "^4.6.0",
    "server-only": "^0.0.1",
    "superjson": "^2.2.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@director.run/typescript-config": "workspace:*",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/bun": "^1.2.17",
    "@types/node": "^24.0.3",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "bun": "^1.2.18",
    "cspell": "^9.1.2",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.31.4",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "wait-port": "^1.1.0"
  }
}
